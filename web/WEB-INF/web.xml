<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>EmailSendingServlet</servlet-name>
        <servlet-class>AsYouWish.EmailSendingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailSendingServlet</servlet-name> 
        <url-pattern>/EmailSendingServlet</url-pattern>  
    </servlet-mapping>
    <servlet>
        <servlet-name>BackupRestoreDatabase</servlet-name>
        <servlet-class>AsYouWish.BackupRestoreDatabase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackupRestoreDatabase</servlet-name>
        <url-pattern>/BackupRestoreDatabase</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DBBackup</servlet-name>
        <servlet-class>AsYouWish.DBBackup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBBackup</servlet-name>
        <url-pattern>/DBBackup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DropboxConnection</servlet-name>
        <servlet-class>AsYouWish.DropboxConnection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DropboxConnection</servlet-name>
        <url-pattern>/DropboxConnection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DropboxUpload</servlet-name>
        <servlet-class>AsYouWish.DropboxUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DropboxUpload</servlet-name>
        <url-pattern>/DropboxUpload</url-pattern>
    </servlet-mapping>
</web-app>
